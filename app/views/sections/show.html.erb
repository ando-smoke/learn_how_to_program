<% content_for(:title, 'Section | Learn How To Program') %>

<h1><%= @section.name %></h1>

<% if @section.topics.any? %>
  <h4>Topics:</h4>

  <ul>
    <% @section.topics.each do |topic| %>
      <li>
        <%= link_to topic.name,
          lesson_section_topic_path(@lesson, @section, topic) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No topics entered!</p>
<% end %>

<p><%= link_to 'Add New Topic',
  new_lesson_section_topic_path(@lesson, @section) %></p>

<hr />

<p><%= link_to 'Return to ' + @lesson.name, lesson_path(@lesson) %></p>

<p><%= link_to 'Return to All Lessons', lessons_path %></p>
